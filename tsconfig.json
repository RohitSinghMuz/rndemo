{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["app/constants/*"],
      "@assets/*": ["app/assets/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
